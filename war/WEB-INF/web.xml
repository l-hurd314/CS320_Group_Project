<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>IndexServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.ms1.servlet.IndexServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AddNumbersServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.ms1.servlet.AddNumbersServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>MultNumbersServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.ms1.servlet.MultNumbersServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>GuessingGameServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.ms1.servlet.GuessingGameServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.ms1.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>SignUpServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.ms1.servlet.SignUpServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UserHomeServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.ms1.servlet.UserHomeServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>PostServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.ms1.servlet.PostServlet</servlet-class>
  </servlet>
  
  <!-- AJAX servlets. -->
  <servlet>
    <servlet-name>AddNumbersAjaxServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.ms1.servlet.ajax.AddNumbersAjaxServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>MultNumbersAjaxServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.ms1.servlet.ajax.MultNumbersAjaxServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>NextGuessAjaxServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.ms1.servlet.ajax.NextGuessAjaxServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LoginAjaxServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.ms1.servlet.ajax.LoginAjaxServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>SignUpAjaxServlet</servlet-name>
    <servlet-class>edu.ycp.cs320.ms1.servlet.ajax.SignUpAjaxServlet</servlet-class>
  </servlet>

  <!-- Servlet mappings -->
  <servlet-mapping>
    <servlet-name>IndexServlet</servlet-name>
    <url-pattern>/index</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AddNumbersServlet</servlet-name>
    <url-pattern>/addNumbers</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>MultNumbersServlet</servlet-name>
    <url-pattern>/multNumbers</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>GuessingGameServlet</servlet-name>
    <url-pattern>/guessingGame</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/Login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SignUpServlet</servlet-name>
    <url-pattern>/signUp</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UserHomeServlet</servlet-name>
    <url-pattern>/UserHome</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>PostServlet</servlet-name>
    <url-pattern>/Post</url-pattern>
  </servlet-mapping>
  
  <!--  AJAX servlet mappings. -->
  <servlet-mapping>
    <servlet-name>AddNumbersAjaxServlet</servlet-name>
    <url-pattern>/ajax/addNumbers</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>MultNumbersAjaxServlet</servlet-name>
    <url-pattern>/ajax/multNumbers</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>NextGuessAjaxServlet</servlet-name>
    <url-pattern>/ajax/nextGuess</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LoginAjaxServlet</servlet-name>
    <url-pattern>/ajax/Login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>SignUpAjaxServlet</servlet-name>
    <url-pattern>/ajax/signUp</url-pattern>
  </servlet-mapping>
  

  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>
